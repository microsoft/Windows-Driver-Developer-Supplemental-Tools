<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <system:String x:Key="SarifViewerOptionsControl_GroupBoxHeader">General</system:String>
    
    <system:String x:Key="SarifViewerOptionsControl_CodeQLBoxHeader">CodeQL</system:String>
    
    <system:String x:Key="SarifViewerOptionsControl_ColorBoxHeader">Colors</system:String>

    <system:String x:Key="SarifViewerOptionsControl_MonitorSarifFolder">Load .sarif files from the .sarif folder automatically</system:String>

    <system:String x:Key="SarifViewerOptionsControl_EnableGitHubAdvancedSecurity">Enable GitHub Advanced Security scan results</system:String>

    <system:String x:Key="SarifViewerOptionsControl_EnableKeyEventAdornment">Enable Key Event text adornments in the editor</system:String>

    <Style x:Key="ColorOptionsGroupBoxStyle" TargetType="GroupBox">
        <Setter Property="Padding" Value="9,8,9,9" />
    </Style>

    <Style x:Key="DecorationStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,0,0,20" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>

    <Style x:Key="DecorationLabel" TargetType="TextBlock">
        <Setter Property="Width" Value="180" />
    </Style>

    <Style x:Key="DecorationComboBox" TargetType="ComboBox">
        <Setter Property="Margin" Value="0,5,0,0" />
    </Style>

    <Style x:Key="DecorationComboBoxItemStackPanel" TargetType="StackPanel">
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="DecorationComboBoxItemColorSwatch" TargetType="Rectangle">
        <Setter Property="Height" Value="15" />
        <Setter Property="Margin" Value="-3,0,4,0" />
        <Setter Property="Stroke" Value="Black" />
        <Setter Property="Width" Value="15" />
    </Style>
    
</ResourceDictionary>