<Window x:Class="Microsoft.CodeQL.Views.CodeQLQuerySelectorPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Microsoft.CodeQL.Views"
        mc:Ignorable="d"
        Title="CodeQL Queries" WindowStyle="ToolWindow" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" d:DesignHeight="234.92" d:DesignWidth="369">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
        <StackPanel Orientation="Vertical" Grid.RowSpan="1" HorizontalAlignment="Stretch" Grid.ColumnSpan="1" >
            <Grid Height="210" Width="auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button Content="OK" Height="22" Width="71" Margin="200,178,98,10" Click="ButtonOK_Click"/>
                <Button Content="Cancel" Height="22" Width="71" Margin="276,178,22,10" Click="ButtonCancel_Click"/>
                <Button Content="Refresh" Height="22" Width="71" Click="ButtonRefresh_Click" Margin="10,178,288,10"/>
                <ListBox x:Name="queryListBox" ItemsSource="{Binding DiscoveredQueryPacks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectionMode="Multiple" 
                         SelectionChanged="ListBox_SelectionChanged" Margin="10,0,10,40" HorizontalAlignment="Stretch" Visibility="Visible"/>
                <ProgressBar x:Name="RefreshBar" HorizontalAlignment="Left" Height="16" Margin="86,181,0,0" VerticalAlignment="Top" Width="78" IsIndeterminate="True" Visibility="Hidden"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
